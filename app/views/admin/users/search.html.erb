<div class="row">
	<div class="col">
	</div>
	<div class="col-8">
		<div class="card">
			<div class="card-header">
				<h3>ユーザーリスト:検索結果</h3>
			</div>
			<div class="card-body">
				<%= form_tag admin_search_users_path, :method => 'get', class:"form-inline" do %>
			  		<%= text_field_tag :search, "", class:"form-control rounded-pill", size: "60",placeholder: "名前/メールアドレス" %>
			  		<%= submit_tag "検索", class:"btn btn-light", :name => nil %>
				<% end %>
				<table class="table">
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :image, class:"profile-image", fallback: "no_image_profile.jpg", size: '40x40' %>
							</td>
							<td><%= link_to user.name, admin_user_path(user) %></td>
							<td><span class="badge badge-warning">観たい!<br>
								<%= user.wishes.count %></span></td>
							<td><span class="badge badge-warning">観た!<br>
								<%= user.dones.count %></span></td>
							<td><span class="badge badge-warning">Mybest!<br>
								<%= user.mybests.count %></span></td>
							<td><%= link_to '詳細', admin_user_path(user), class:"btn btn-light btn-sm" %>
		        				<%= link_to '編集', edit_admin_user_path(user), class:"btn btn-secondary btn-sm" %>
		       					<%= link_to '退会', admin_user_path(user), method: :delete, class:"btn btn-danger btn-sm", data: { confirm: '退会させますか？' } %>
		       				</td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
	<div class="col">
	</div>
</div>