<h1>映画一覧</h1>


<table class= "table">
  <thead>
    <tr>
      <th>img</th>
      <th>タイトル</th>
      <th>出演者</th>
      <th>制作</th>
      <th>ジャンル</th>
      <th>原作</th>
      <th>公開年</th>
      <th>上映時間</th>
      <th>言語</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
      	<td><%= attachment_image_tag film, :image, class: "item-index-jacket-image", fallback: "no_images.png", size: '50x50' %></td>
        <td><%= film.title %></td>
        <td><%= render 'admin/films/performer_tag', performer_tag_list: film.performer_list %></td>
        <td><%= render 'admin/films/staff_tag', staff_tag_list: film.staff_list %></td>
        <td><%= render 'admin/films/genre_tag', genre_tag_list: film.genre_list %></td>
        <td><%= film.based %></td>
        <td><%= film.release %></td>
        <td><%= film.time %></td>
        <td><%= film.language %></td>
        <td><%= link_to 'Show', admin_film_path(film) %></td>
        <td><%= link_to 'Edit', edit_admin_film_path(film) %></td>
        <td><%= link_to 'Destroy', admin_film_path(film), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>