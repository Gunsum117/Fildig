<h1>Films作成</h1>


<%= form_with model: @film do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>

    <div class="film-tags-field">
	<%= f.label :performer_list %>
    <%= f.text_field :performer_list, value: @film.performer_list.join(',') %>
    </div>

    <div>
    <%= f.label :based %>
    <%= f.text_field :based %>
	</div>

	<div>
    <%= f.label :release %>
    <%= f.text_field :release %>
	</div>

	<div>
    <%= f.label :time %>
    <%= f.text_field :time %>
	</div>

	<div>
    <%= f.label :language %>
    <%= f.text_field :language %>
	</div>

	<div>
    <%= f.submit "作成", class: 'btn btn-primary'%>
	</div>
  </div>
<% end %>