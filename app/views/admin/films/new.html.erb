<div class="row">
	<div class="col">
	</div>
	<div class="col-8">
		<div class="card">
			<div class="card-header">
				<h3>新しい映画を作成する</h3>
			</div>
			<div class="card-body">
				<%= form_with model: @film, url: admin_films_path do |f| %>
					<div class="form-group">
		            	<label>タイトル</label>
		            	<%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
		          	</div>
					<div class="form-group">
		            	<label>画像</label><br>
		            	<%= f.attachment_field :image %>
		          	</div>
		          	<div class="form-group">
		            	<label>あらすじ</label><br>
		            	<%= f.text_area :story, class:"form-control", placeholder:"あらすじ" %>
		          	</div>
				    <div class="film-tags-field">
						<label>出演者タグ</label>
				    	<%= f.text_field :performer_list, value: @film.performer_list.join(','), "data-role" => "tagsinput" %>
				    </div>
				    <div class="film-tags-field">
						<label>制作タグ</label>
				    	<%= f.text_field :staff_list, value: @film.staff_list.join(','), "data-role" => "tagsinput"  %>
				    </div>
				    <div class="film-tags-field">
						<label>ジャンルタグ</label>
				    	<%= f.text_field :genre_list, value: @film.genre_list.join(','), "data-role" => "tagsinput"  %>
				    </div>
					<div class="form-group">
		            	<label>原作</label>
		            	<%= f.text_field :based, class:"form-control", placeholder:"原作" %>
		          	</div>
				    <div>
					<div class="form-group">
		            	<label>公開年</label>
		            	<%= f.text_field :release, class:"form-control", placeholder:"公開年" %>
		          	</div>
					<div class="form-group">
		            	<label>時間</label>
		            	<%= f.text_field :time, class:"form-control", placeholder:"時間" %>
		          	</div>
					<div class="form-group">
		            	<label>言語</label>
		            	<%= f.text_field :language, class:"form-control", placeholder:"言語" %>
		          	</div>
					<div class="text-center">
				    	<%= f.submit "作成", class: 'btn btn-primary btn-lg'%>
					</div>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col">
	</div>
</div>