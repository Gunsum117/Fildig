


<div class="row">

  <div class="col">
  </div>

  <div class="col-6">
    <div class="card">
      <div class="card-header">
        <h2>会員登録</h2>
      </div>
      <div class=card-body>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="form-group">
            <label>ユーザー名</label>
            <%= f.text_field :name, class:"form-control rounded-pill", placeholder:"ユーザー名" %>
          </div>
          <div class="form-group">
            <label>メールアドレス</label>
            <%= f.email_field :email, class:"form-control rounded-pill", placeholder:"メールアドレス" %>
          </div>
          <div class="form-group">
            <label>パスワード</label>
            <% if @minimum_password_length %>
              <span>(<%= @minimum_password_length %> 文字以上必須)</span>
            <% end %><br />
            <%= f.password_field :password, class:"form-control rounded-pill", autocomplete: "new-password" %>
          </div>
          <div class="form-group">
            <label>パスワード確認</label>
            <%= f.password_field :password_confirmation, class:"form-control rounded-pill", autocomplete: "パスワード確認" %>
          </div>
          <div class="card-text">
            <%= f.submit "会員登録", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col">
  </div>

</div>