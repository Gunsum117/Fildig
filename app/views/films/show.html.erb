	<div class="col">
	</div>

	<div class="col-10">
		<div class="card">
			<% @film.reviews.each do |review| %>
				<div class="card-body">
					<h5 class="card-title"><%= review.title %></h5>
					<p class="card-text"><%= review.user.name %></p>
