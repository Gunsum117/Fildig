
<div class="card-columns">

<% @films.each do |film| %>
  <a href="<%= film_path(film) %>" class="card" style="max-width: 18rem;">
  	<div class="card body">
      	<p class="card-text text-center"><%= attachment_image_tag film, :image, class: "item-index-jacket-image", fallback: "no_images.png", size: '150x200' %></p>
        <p class="card-title"><%= film.title %></p>
        <p class="card-text"><%= film.release %>å¹´</p>
        <p class="card-text"><%= film.language %></p>
        <p class="card-text"><% film.performer_list.each do |tag| %>
        						<span class="badge badge-success"><%= tag %></span>
        					 <% end %>
        </p>
        <p class="card-text"><% film.staff_list.each do |tag| %>
        						<span class="badge badge-info"><%= tag %></span>
        					 <% end %>
        </p>
        <p class="card-text"><% film.genre_list.each do |tag| %>
        						<span class="badge badge-primary"><%= tag %></span>
        					 <% end %>
        </p>
    </div>
  </a>
<% end %>


</div>